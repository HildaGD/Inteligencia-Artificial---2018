%CALCULADORA%

x:-write('CAlculadora, que desea hacer').

suma:- write('ingrese primer numero: '),
    read(A),
    write('ingrese segundo numero: '),
    read(B),
    C is A+B,
    format('El resultado es: ~w',[C]).


resta:-write('Ingrese primer numero: '),
    read(A),
    write('ingrese segundo numero: '),
    read(B),
    C is A-B,
    format('El resultado es: ~w',[C]).


multiplicacion:-write('Ingrese primer numero: '),
    read(A),
    write('ingrese segundo numero: '),
    read(B),
    C is A*B,
    format('El resultado es: ~w',[C]).


division:-write('Ingrese primer numero: '),
    read(A),
    write('ingrese segundo numero: '),
    read(B),
    C is A/B,
    format('El resultado es: ~w',[C]).


